<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    >

    <FrameLayout
        android:id="@+id/search_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            app:cardBackgroundColor="#261e47">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="6dp"
                        android:src="@drawable/icons8_filter_50" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:layout_margin="6dp"
                        android:text="篩選器"
                        android:textColor="#FFFFFF"
                        android:textColorLink="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sel_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/sel_reset_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:text="重設"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="serif-monospace"
                    android:text="RARITY"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp">

                        <CheckBox
                            android:id="@+id/sel_star_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star_1" />

                        <CheckBox
                            android:id="@+id/sel_star_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star_2" />

                        <CheckBox
                            android:id="@+id/sel_star_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star_3" />

                        <CheckBox
                            android:id="@+id/sel_star_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star_4" />
                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="serif-monospace"
                    android:text="BAND"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp">

                        <CheckBox
                            android:id="@+id/sel_band_ppp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/band_ppp" />

                        <CheckBox
                            android:id="@+id/sel_band_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/band_a" />

                        <CheckBox
                            android:id="@+id/sel_band_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/band_h" />

                        <CheckBox
                            android:id="@+id/sel_band_pp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/band_pp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp">

                        <CheckBox
                            android:id="@+id/sel_band_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/band_r" />

                        <CheckBox
                            android:id="@+id/sel_band_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/band_m" />
                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="serif-monospace"
                    android:text="ATTRIBUTE"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp">

                        <CheckBox
                            android:id="@+id/sel_attr_powerful"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/type_powerful" />

                        <CheckBox
                            android:id="@+id/sel_attr_cool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/type_cool" />

                        <CheckBox
                            android:id="@+id/sel_attr_happy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/type_happy" />

                        <CheckBox
                            android:id="@+id/sel_attr_pure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:buttonTint="#FFFFFF"
                            android:checked="true"
                            android:outlineAmbientShadowColor="#FFFFFF"
                            android:outlineSpotShadowColor="#FFFFFF"
                            android:shadowColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/type_pure" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>